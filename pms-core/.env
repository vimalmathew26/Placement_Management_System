# Database Configuration
DATABASE_NAME="PMS"
DATABASE_URI="mongodb+srv://<username>:<password>@<cluster-url>/"

# JWT Authentication
SECRET_KEY="<your-secret-key>"  # Generate a strong secret key
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Storage
UPLOADS_PATH="./uploads"

# Email Configuration
MAIL_USERNAME="<your-email@gmail.com>"
MAIL_PASSWORD="<your-app-specific-password>"  # Generate from Google Account settings
MAIL_FROM="<your-email@gmail.com>"  # Same as MAIL_USERNAME
MAIL_PORT=587
MAIL_SERVER="smtp.gmail.com"